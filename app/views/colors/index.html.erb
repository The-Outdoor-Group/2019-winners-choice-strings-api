<p id="notice"><%= notice %></p>

<h1>Colors</h1>

<%= render 'search' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Count</th>
      <th>Swatch</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @colors.each do |color| %>
      <tr>
        <td><%= color.name %></td>
        <td><%= color.code %></td>
        <td><%= color.count %></td>
        <td><%= color.swatch_url %></td>
        <td><%= link_to 'Show', color, class: "btn-sm btn-info" %></td>
        <% if admin_signed_in? %>
          <td><%= link_to 'Edit', edit_color_path(color), class: "btn-sm btn-success" %></td>
          <td><%= link_to 'Destroy', color, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-sm btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if admin_signed_in? %>
  <%= link_to 'New Color', new_color_path, class:"btn btn-primary" %>
<% end %>