<p id="notice"><%= notice %></p>

<h1>Bows</h1>

<%= form_tag bows_path, method: :get do %>
  <%= text_field_tag 'name', params[:term], placeholder: "Enter bow name" %>
  <%= submit_tag 'Search!' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Brand</th>
      <th>Type</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bows.each do |bow| %>
      <tr>
        <td><%= bow.brand.name %></td>
        <td><%= bow.type.name %></td>
        <td><%= bow.name %></td>
        <td><%= link_to 'Show', bow %></td>
        <td><%= link_to 'Edit', edit_bow_path(bow) %></td>
        <td><%= link_to 'Destroy', bow, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bow', new_bow_path %>
