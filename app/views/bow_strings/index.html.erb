<p id="notice"><%= notice %></p>

<h1>Bow Strings</h1>

<%= render 'search' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Material</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bow_strings.each do |bow_string| %>
      <tr>
        <td>
          <ul class="bow-string-materials">
            <% bow_string.materials.each do |material| %>
              <li><%= Material.find(material).name %></li>
            <% end %>
          </ul>
        </td>
        <td><%= bow_string.color.name %></td>
        <td><%= link_to 'Show', bow_string %></td>
        <% if admin_signed_in? %>
          <td><%= link_to 'Edit', edit_bow_string_path(bow_string) %></td>
          <td><%= link_to 'Destroy', bow_string, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Bow String', new_bow_string_path, class: "btn btn-primary" %>
<%= link_to 'Reset View', bow_strings_path, class: "btn btn-primary" %>



