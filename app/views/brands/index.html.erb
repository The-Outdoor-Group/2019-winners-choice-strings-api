<p id="notice"><%= notice %></p>

<h1>Brands</h1>

<%= render 'search' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td><%= link_to 'Show', brand, class: "btn-sm btn-info" %></td>
        <% if admin_signed_in? %>
          <td><%= link_to 'Edit', edit_brand_path(brand), class: "btn-sm btn-success" %></td>
          <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-sm btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if admin_signed_in? %>
  <%= link_to 'New Brand', new_brand_path, class:"btn btn-primary"  %>
<% end %>