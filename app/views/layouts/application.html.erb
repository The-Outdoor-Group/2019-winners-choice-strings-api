<!DOCTYPE html>
<html>
  <head>
    <title>WinnersChoiceStringsApi</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">WC STRINGS API</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav" style="width: 100%;">
          <li class="nav-item">
            <%= link_to "Brands",  brands_path, { :class => "nav-link" }  %>
          </li>
          <li class="nav-item">
            <%= link_to "Bows",  bows_path, { :class => "nav-link" }  %>
          </li>
          <li class="nav-item">
            <%= link_to "Bow Strings",  bow_strings_path, { :class => "nav-link" }  %>
          </li>
          <li class="nav-item">
            <%= link_to "Materials",  materials_path, { :class => "nav-link" }  %>
          </li>
          <li class="nav-item">
            <%= link_to "Colors",  colors_path, { :class => "nav-link" }  %>
          </li>
          <li class="nav-item">
            <%= link_to "Types",  types_path, { :class => "nav-link" }  %>
          </li>
          <li class="nav-item"  style="margin-left: auto;">
            <% if admin_signed_in? %>
              <a href="<%= destroy_admin_session_path%>" data-method="delete" class="btn btn-danger">Logout</a>
            <% else %>
              <a href="<%= new_admin_session_path%>" class="btn btn-info">Login</a>
            <% end %>
          </li>
        </ul>
      </div>
    </nav>
    <div class="container">
    <%= yield %>
    </div>
  </body>
</html>
