<p id="notice"><%= notice %></p>

<h1>Types</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= type.name %></td>
        <td><%= link_to 'Show', type, class: "btn-sm btn-info" %></td>
        <% if admin_signed_in? %>
          <td><%= link_to 'Edit', edit_type_path(type), class: "btn-sm btn-success" %></td>
          <td><%= link_to 'Destroy', type, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-sm btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if admin_signed_in? %>
  <%= link_to 'New Type', new_type_path, class:"btn btn-primary"  %>
<% end %>